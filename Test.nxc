void rotate360 ()
{
    OnFwd(OUT_A, POWERFOR360) //Nog power för att rotera 360 grader
    OnRev(OUT_B, POWERFOR360)
}

void turnLeft ()
{
     OnFwd(OUT_A, POWER);
     OnRev(OUT_B, POWER);

}

void turnRight ()
{
     OnFwd(OUT_B, POWER);
